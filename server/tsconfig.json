{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",

		"target": "esnext",
		"module": "commonjs",
		"lib": ["esnext"],
		"sourceMap": true,

		"strict": true,
		"noUnusedLocals": true,

		"moduleResolution": "node",
		"esModuleInterop": true,
		"resolveJsonModule": true,

		"baseUrl": ".",
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"../shared",
	]
}
