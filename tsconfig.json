{
	"compilerOptions": {
		"outDir": "./lib/",

		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"dom.iterable",
			"es5",
			"es2015",
			"es2016"
		],

		"allowJs": false,
		"allowSyntheticDefaultImports": true,
		"jsx": "react",
		"sourceMap": true,

		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"strictNullChecks": true,
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
	]
}
